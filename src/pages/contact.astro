---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let Us Make Music For You!" />

  <ContactUs
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    description="We try to responds within 24 hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Other Ways to Contact"
    items={[
      {
        icon: 'tabler:phone',
        title: 'Phone',
        description: `Russell: +49 176 66404
        <br>
        Smiley: +49 179 5374548`,
      },
      {
        icon: 'tabler:mail',
        title: 'Email',
        description: `Russell: russell@rusytbass.com
        <br> Smiley: supersmiley69@gmx.de`,
      },
    ]}
  />
</Layout>
